<title>Upload</title>
<%- include("../layout") %>
<br><br><div class="container mt-5 py-5">
    <div class="row">
        <div class="col-md-5 offset-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Subir Imagen</h3>
                </div>
                <div class="card-body">
                    <form action="/upload" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                                <input type="file" name="image" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="Titulo" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" placeholder="Descripcion" class="form-control"></textarea>
                        </div>
                        <button class="btn btn-dark btn-block">Subir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>