<title>Perfil</title>
<%- include("../layout") %>
<div class="container mt-5 py-5">
    <h4 class="text-center mt-2 py-2"><%= image.titulo %></h4><hr>
    <div class="row">
        <div class="col-4 mx-auto">

            <div class="card animated fadeInDown">
                <img src="<%= image.path %>" class="card-img-top" alt="<%= image.filename %>">
                <div class="card-body">
                    <p class="card-text"> <%= image.description %> </p>
                    <p><%= format(image.created_at) %></p>
                    <a href="/image/<%= image._id%>/delete" class="btn btn-danger btn-block">
                        Delete Image
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>